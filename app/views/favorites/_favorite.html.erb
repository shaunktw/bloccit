
<% if policy(Favorite.new).create? %>
<div class="favorite">
  <% if favorite = current_user.favorited(post) %>
    
    <%= link_to [topic, post, favorite], class: 'btn btn-danger btn-block', method: :delete do %>
    <i class="glyphicon glyphicon-star-empty "></i>&nbsp; Unfavorite
    <% end %>

  <% else %>

    <%= link_to [topic, post, Favorite.new], class: 'btn btn-primary btn-block', method: :post do %>
    <i class="glyphicon glyphicon-star"></i>&nbsp; Favorite
    <% end %>
    
  <% end %>
</div>
<% end  %>