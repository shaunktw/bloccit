<%= form_for [topic, post, comment], remote: true do |f| %>
  <% if comment.errors.any? %>
    <div class="alert alert-danger">
      <h4>There are <%= pluralize(comment.errors.count, "error") %>.</h4>
      <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(post.errors[:body]) do %>
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label"><%= f.label :comment %></label>
        <div class="col-sm-10">
            <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: "Enter comment body" %>
        </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 col-sm-2 control-label"></label>
      <div class="col-sm-10" style="margin:10px 0;"><%= f.submit "Save", class: 'btn btn-success' %></div>
    </div>
  <% end %>
<% end %>