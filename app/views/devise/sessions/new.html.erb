<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-login"}) do |f| %>
  <h2 class="form-login-heading">sign in now</h2>
  <div class="login-wrap">
    <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email" %>
      <br>
      <%= f.password_field :password, class: 'form-control', placeholder: "Enter password" %>
      <label class="checkbox">
          <div class="col-lg-6" style="padding:0;">
            <% if devise_mapping.rememberable? -%>
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %> Remember me
              <% end %>
            <% end %>
          </div>
          <div class="col-lg-6" style="padding:0;text-align: right;">
             <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>
      </label>
      <button class="btn btn-orange btn-block" type="submit"><span class="glyphicon glyphicon-lock"></span> SIGN IN</button>
      <hr>
      <%= render "devise/shared/links" %>

  </div>

<% end %>
