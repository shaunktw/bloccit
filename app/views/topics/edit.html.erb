<div class="row">
  <div class="col-md-4 col-lg-offset-4">
    <div class="panel panel-default set-panel">
      <div class="panel-body">
        <div class="page-header">
          <h3 class="title">Edit Category</h3>
        </div>
        <p class="about"> Guidelines for categories: </p>
        <ul class="list-style">
          <li>&raquo; Make sure the topic is appropriate.</li>
          <li>&raquo; Keep it simple.</li>
          <li>&raquo; Smile when you type.</li>
        </ul>
        <hr style="border-color: #eee;">
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control', placeholder: "Enter category name" %>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, rows: 6, class: 'form-control', placeholder: "Enter category description" %>
          </div>

          <div class="form-group">
            <%= f.label :public do %>
              <%= f.check_box :public %> Public category
            <% end %>
          </div>
          <%= f.submit "Save", class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>