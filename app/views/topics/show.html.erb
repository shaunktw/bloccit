<div class="row">
  <div class="col-xs-12 col-md-4 pull-right" style="margin-bottom: 20px;">
    <% if policy(Post.new).create? %>
      <%= link_to new_topic_post_path(@topic), class: 'btn btn-success' do %>
        <span class="glyphicon glyphicon-plus"></span> New Place
      <% end %>
    <% end %>
    <% if policy(@topic).destroy? %>
      <%= link_to @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } do %> 
        <span class="glyphicon glyphicon-trash"></span> Delete Topic
      <% end %>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="page-header" style="margin-top: 25px;">
      <h3 class="title"><%= @topic.name %>
      <% if policy(@topic).update? %>
        <%= link_to edit_topic_path, class: 'btn btn-warning btn-xs' do %>
          <span class="glyphicon glyphicon-pencil"></span> Edit Topic
        <% end %>
      <% end %>
      </h3>
    </div>
    <p class="about"><%= @topic.description %></p>
    <br>
    <div class="row gap-style">
      <%= render @posts %>
    </div>
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  </div> 

</div>